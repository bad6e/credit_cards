<!-- Page Content -->
  <div class="container">
    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= @card.card_name.name %>
          <small><%= @card.card_name.annual_fee %></small></h1>
        <ol class="breadcrumb">
          <li>Category</li>
          <% @card.category_name.each do |name| %>
            <li class="active"><%= link_to name, category_path(name.downcase) %></li>
            <% end %>
        </ol>
      </div>
    </div>
    <!-- /.row -->
    <!-- Portfolio Item Row -->
    <div class="row card-row well">
      <div class="col-md-3">
        <img class="img-responsive" src=<%= @card.card_name.image_link %> alt="">
        <h3>Card Details</h3>
        <h5><strong>Sign Up Bonus:</strong> 50,000 points</h5>
        <h5><strong>Spending Requirements:</strong> $1,000</h5>
        <h5><strong>Intro Rate:</strong> <%= @card.card_name.intro_rate %></h5>
        <h5><strong>APR:</strong> <%= @card.card_name.apr %></h5>
        <h5><strong>Annual Fee:</strong> <%= @card.card_name.annual_fee %></h5>
      </div>

      <div class="col-md-9 well card-description">
        <h3>Card Description</h3>
        <ul>
          <% n = 1 %>
          <% @card.card_name.information.each do |info| %>
          <li id="information-<%= n %>"><%= info %></li>
          <% n += 1 %>
          <% end %>
        </ul>
      </div>
    </div>
    <!-- /.row -->

    <!-- Related Cards Row -->
    <div class="row">
      <div class="col-lg-12">
          <h3 class="page-header related-card-header">Related <%= @card.category_name%> Cards</h3>
      </div>
      <% @card.featured_cards.each do |card| %>
      <div class="related-cards">
        <div class="col-sm-3 col-xs-6">
          <img class="img-responsive img-hover img-related" src=<%= card.image_link %> alt="">
          <p class="related-card-name"><%= link_to card.name, card_path(card)%></p>
        </div>
      </div>
      <% end %>
    </div>
    <hr>
    <!-- /.row -->
