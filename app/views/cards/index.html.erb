<%= render partial: "index_header" %>
<div class="page-title-container">
  <div class="container">
    <div class="page-title pull-left">
      <h2 class="entry-title">Your Search Results</h2>
        </div>
        <ul class="breadcrumbs pull-right">
          <li><a href="/">HOME</a></li>
          <li class="active">Card Search Results</li>
        </ul>
    </div>
</div>

<section id="content">
  <div class="container">
    <div id="main">
      <div class="row">

        <!-- Modify Search Box -->
        <div class="col-sm-4 col-md-3">
          <h4 class="search-results-title"><i class="soap-icon-search"></i><b><%= pluralize(@cards.count, "Card") %></b> found.</h4>
          <div class="toggle-container filters-container">
            <div class="panel style1 arrow-right">
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#modify-search-panel" class="collapsed">Modify Search</a>
              </h4>
                <div id="modify-search-panel" class="panel-collapse collapse">
                  <div class="panel-content">

                    <div class="form-group">
                      <label>Card Name</label>
                       <form method="get" accept-charset="UTF-8" id="search-form" role="search" action="/cards" class="quick-search">
                          <input type="text" class="input-text full-width" name="search" class="input-text search-input" placeholder="ex. Chase Sapphire Preferred" />
                       </form>
                    </div>

                     <br><button type="submit"  class="btn-medium uppercase full-width">Search</button>
                    <br />
                  </div>
                </div>
            </div>
          </div>
        </div>
        <!-- End - Modify Search Box -->

        <div class="col-sm-8 col-md-9">

          <!-- Sort By Result Box -->
          <!-- This will be added later -->
          <!-- End - Sort By Result Box -->

          <!-- Card Listings -->
          <div class="flight-list listing-style3 flight">
          <% @cards.each do |card| %>
            <article class="box">
              <div class="details col-xs-12">
              <%= link_to image_tag(card.image_link, class: 'card-image-cat') , card_path(card) %>
                <div class="details-wrapper">
                  <div class="first-row">
                    <h4 id="cat-card-title"><%= card.name %></h4>
                  </div>
                   <div>
                    <span class="price" id="apply-now-color"><h6 id="apply-now-title">Apply Now?</h6><div class= 'best-offer-color'><br><%= card.best_offer %></div></span>
                  </div>
                  <div class="second-row">
                    <div class="action">
                      <a class="button btn-small active">Favorite Card</a><hr>
                    </div>
                  </div>

                  <div class="third-row">
                    <div class="time">

                      <div class="total-time col-sm-3">

                        <% if card.rewards.any? %>
                          <div class="icon"><i class="soap-icon-party yellow-color"></i></div>
                          <div>
                            <span class="skin-color">Current Bonus - Points</span><br /><%= card.rewards.last.amount %>
                          </div>
                        <% else %>
                          <div class="icon"><i class="soap-icon-clock yellow-color"></i></div>
                          <div>
                            <span class="skin-color">Current Bonus - Points</span><br />NO INFO FOR THIS CARD
                          </div>
                        <% end %>

                      </div>

                      <div class="take-off col-sm-3">

                        <% if  card.rewards.any? && card.rewards.last.dollar_amount? %>
                          <div class="icon"><i class="soap-icon-features yellow-color"></i></div>
                          <div>
                            <span class="skin-color">Current Bonus - Dollars</span><br /><%= number_to_currency(card.rewards.last.dollar_amount, precision: 0) %>
                          </div>
                        <% else %>
                          <div class="icon"><i class="soap-icon-features yellow-color"></i></div>
                          <div>
                            <span class="skin-color">Current Bonus - Dollars</span><br/>NO INFO FOR THIS CARD
                          </div>
                        <% end %>

                      </div>

                      <div class="take-off col-sm-3">
                        <div class="icon"><i class="soap-icon-card yellow-color"></i></div>
                        <div>
                          <span class="skin-color">Annual Fee</span><br /><%= card.annual_fee %>
                        </div>
                      </div>
                      <div class="landing col-sm-3">
                        <div class="icon"><i class="soap-icon-savings yellow-color"></i></div>
                        <div>
                          <span class="skin-color">APR</span><br /><%= card.apr %>
                        </div>
                      </div>
                    </div>
                    <div class="action">
                      <%= link_to "SEE MORE INFORMATION", card_path(card), class: "button btn-small full-width see-more-button" %>
                    </div>
                  </div>
                </div>
              </div>
            </article>
            <% end %>
          </div>
          <!-- End Card Listings -->
           <%= will_paginate @cards, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>
  </div>
</section>
