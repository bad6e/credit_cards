<div class="container upload-file">
  <div class="row">
    <div class="col-lg-12">
      <h2>Too Many Miles - Blogs</h2><br>
      <ul>
        <% @blogs.each do |blog| %>
          <li class="blog-<%= blog.id %>"><%= blog.meta_title %> | <%= link_to "Edit", edit_admin_blog_path(blog) %> | <%= link_to "Preview Post", admin_blog_path(blog.slug) %></li>
        <% end %>
      </ul><br>
      <%= link_to "Add a New Blog", new_admin_blog_path %>
      </br></br>
      <h3><%= link_to "See Cards", admin_cards_path %></h3>
    </div>
  </div>
</div>

