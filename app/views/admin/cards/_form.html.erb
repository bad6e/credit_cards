<%= bootstrap_form_for([:admin, @card]) do |card_form| %>
  <%= card_form.text_field :name %>
  <%= card_form.text_field :annual_fee %>
  <%= card_form.text_field :apr %>
  <%= card_form.text_field :intro_rate %>
  <%= card_form.text_field :image_link %>
  <%= card_form.text_field :information %>
  <%= card_form.text_field :best_offer %>
  <%= card_form.text_field :flyer_talk_link %>
  <%= card_form.text_field :image_url %>
  <%= card_form.text_field :point_type %>
  <%= card_form.collection_select :categories, Category.order(:name),:id,:name, {:include_blank => true}, {:multiple => true} %>
  <%= card_form.collection_select :main_program, MainProgram.order(:name),:id,:name, {:include_blank => false}, {:multiple => true} %>
  <%= card_form.collection_select :card_program, CardProgram.order(:name),:id,:name, {:include_blank => false}, {:multiple => true} %>
  <%= card_form.submit 'Submit Information' %>
<% end %>

