<%= bootstrap_form_for([:admin, @reward]) do |reward_form| %>
  Card Id: <%= @reward.card_id %>
  <%= reward_form.number_field :amount %>
  <%= reward_form.number_field :spending_amount %>
  <%= reward_form.date_field :record_date %>
  <%= reward_form.hidden_field :card_id, value: @reward.card_id %>
<%= reward_form.submit 'Add New Reward' %>
<% end %>
