<div class="recent-blog-posts">
  <h2>Best Deals for Dec. 2016</h2><br>
</div>
<div class="container section front-page-deals">
  <div class="car-slideshow image-carousel style2 box" data-animation="slide" data-item-width="270" data-item-margin="30">
    <ul class="slides image-box car listing-style1">
      <% @welcome_presenter.brets_favorite_deal_now.each do |card| %>
      <li>
        <article class="box favorite-deal-image">
          <figure>
            <%= link_to image_tag(card.image_link), card_path(card) %>
          </figure>
          <div class="details">
            <h4 class="box-title"><%= link_to card.name, card_path(card) %></h4>
            <p class="mile"><span class="skin-color"><strong>DOllAR BONUS: </span><%=  number_to_currency(card.rewards.last.dollar_amount, precision: 0) %></strong></p>
            <p class="mile"><span class="skin-color"><strong>BONUS: </span><%= number_with_delimiter(card.rewards.last.amount) %> Miles</strong></p>
            <p class="mile"><span class="skin-color apply-now">Apply Now?</span><strong><div class="best-offer-color best-offer" id="yes-or-no"> <%=card.best_offer %></div></strong></p>
            <div class="action">
            <%= link_to "SEE MORE", card_path(card), class: "button btn-small btn-success full-width" %>
            <a class="btn btn-success btn-lg btn-block full-width apply-now-button-welcome" href=<%= card.rewards.last.apply_link %>>APPLY NOW</a>
          </div>
          </div>
        </article>
      </li>
      <% end %>
    </ul>
  </div>
</div><hr>

