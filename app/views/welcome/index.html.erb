<%= render partial: "index_header" %>
<br><br><br>
<h1 class="top-title" id="1">Always Apply at the Right Time</h1><br>
<div class="container apply-center-container">
  <h2 class="time-to-apply-title"></h2>
  <h3 class="title-to-apply-subtitle"></h3>
   <h4 class="graph-detail">ex. The Southwest Premier Credit Card</h4>
</div><br><br>

<!-- Top Image -->
<div class="container reward-graph-container">
   <div id="reward-chart" style="height: 300px;"></div></div><br><br>
   <h4 class="graph-detail">Southwest Premier's Sign Up Bonus Over Time</h4>
<br><br><br>
<!-- End Top Image -->
<section id="content">
  <div class="container section">
    <h1>How does it work?</h1>
    <p>Search or browse cards - see if the sign up bonus is the highest, if yes apply!</p>
  </div>
</section>

<div class="container section">
  <h2>Best Cards Right Now!</h2>
  <div class="car-slideshow image-carousel style2 box" data-animation="slide" data-item-width="270" data-item-margin="30">
    <ul class="slides image-box car listing-style1">
      <% @welcome_presenter.best_cards.each do |card| %>
      <li>
        <article class="box">
          <figure>
            <%= link_to image_tag(card.image_link), card_path(card) %>
          </figure>
          <div class="details">

              <h4 class="box-title"><%= link_to card.name, card_path(card) %></h4>
              <p class="mile"><span class="skin-color"><strong>BONUS: </span><%= card.rewards.first.amount %></strong></p>
              <p class="mile"><span class="skin-color">Good Time to Apply?</span> Yes</p>
              <div class="action">
                <%= link_to "SEE MORE", card_path(card), class: "button btn-small full-width" %>
              </div>
          </div>
        </article>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.16/d3.js" %>
<%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/c3/0.4.10/c3.js" %>
