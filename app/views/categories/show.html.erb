<!-- Page Content -->
  <div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= @category.category_name %>
          <small><%= @category.number_of_cards_per_category %> Total Cards</small>
        </h1>
      </div>
    </div>
    <!-- /.row -->
    <!-- Project One -->
    <% @category.categories_cards.each do |card| %>
      <div class="row">
        <div class="col-md-7">
          <%= link_to image_tag(card.image_link, class:"img-responsive img-hover"), card_path(card) %>
        </div>

        <div class="col-md-5 well">
          <h3><%= link_to card.name, card_path(card) %></h3>
          <h4><%= card.annual_fee %></h4>
          <p><%= card.information[0]%></p>
          <%= link_to "See More Information", card_path(card), class: "btn btn-success" %>
        </div>
      </div>
      <!-- /.row -->
      <hr>
    <% end %>
